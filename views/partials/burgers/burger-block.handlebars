<li>
	{{burger}}
	
	{{#if sleep}}
	<button class="change-sleep p-2 bg-green-700 hover:bg-white text-white hover:text-green-700 rounded-full border-2 border-green-700 fas fa-check" data-id="{{id}}" data-newsleep="{{sleep}}"></button>{{/if}}

	<button class="delete-burger p-2 bg-red-700 hover:bg-white text-white hover:text-red-700 rounded-full border-2 border-red-700 fas fa-minus" data-id="{{this.id}}"></button>
</li>

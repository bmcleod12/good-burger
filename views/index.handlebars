<div class="flex justify-center text-8xl p-3">
  <div class="bg-white rounded-full text-red-700 p-3 bg-gray-200 border-4 border-red-700">
    <div class="fas fa-hamburger p-1"></div>
    <div class="fas fa-hamburger p-1"></div>
    <div class="fas fa-hamburger p-1"></div> 
  </div>

</div>

<h1 class="text-5xl text-center p-3 text-red-700">Burger Log</h1>

<div class="grid grid-cols-2 gap-4 p-3">
  <div>
    <h2>Burgers to be devoured:</h2>
    <ol class="list-decimal p-3">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
      {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div>
    <h2>Burgers already devoured:</h2>
    <ol class="list-decimal p-3">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block sleep=false}}
      {{/if}}
      {{/each}}
    </ol>
  </div>
</div>

<div class="flex justify-center content-center">
  <div>
    <form id="create-form">
      <input class="border-2 p-3" type="text" id="newburger" name="burger">
      <button id="submit" type="submit" class="bg-blue-900 hover:bg-white border-2 border-blue-900 font-medium text-white hover:text-blue-900  text-xl p-2 rounded-full fas fa-plus"></button> 
    </form>      
  </div>
</div>